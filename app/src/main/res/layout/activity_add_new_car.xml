<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_new_car"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ulgebra.luxscaradmin.AddNewCar">
    <ScrollView style="@style/mama">
        <LinearLayout style="@style/mpwc"
            android:orientation="vertical">
            <LinearLayout style="@style/topTitleBar"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/topTitleText"
                    android:text="Add a new Car"
                    />
                <Button style="@style/topTitleShadow" />

            </LinearLayout>
            <LinearLayout style="@style/mpwc"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                >

                <TextView
                    style="@style/mpwc"
                    android:text="Car Details"
                    android:paddingTop="16dp"
                    android:paddingLeft="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                style="@style/mpwc"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:paddingBottom="15dp"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/addCar_modelName"
                        android:hint="Car Model name"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/addCar_brandName"
                        android:hint="Car Brand name"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/cost_per_day"
                        android:hint="Rent Cost per day"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/extra_km_charge"
                        android:hint="Extra Km Charge"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/extra_hour_charge"
                        android:hint="Extra per hour Charge"
                        android:paddingLeft="10dp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <TextView
                    style="@style/mpwc"
                    android:text="Car Description"
                    android:paddingTop="16dp"
                    android:paddingLeft="0dp"
                    android:layout_marginLeft="0dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="18dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="#ffffff"/>
                <LinearLayout style="@style/mpwcvw"
                    android:layout_marginTop="10dp">
                    <TextView style="@style/mpwc"
                        android:text="Fuel Type"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="5dp"/>
                    <Spinner android:id="@+id/fuel_type"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        style="@style/mpwc" />
                </LinearLayout>
                <LinearLayout style="@style/mpwcvw"
                    android:layout_marginTop="10dp">
                    <TextView style="@style/mpwc"
                        android:text="Transmission Type"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="5dp"/>
                    <Spinner android:id="@+id/trans_type"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        style="@style/mpwc" />
                </LinearLayout>
                <LinearLayout style="@style/mpwcvw"
                    android:layout_marginTop="10dp">
                    <TextView style="@style/mpwc"
                        android:text="Car Type"
                        android:textSize="18dp"
                        android:textStyle="bold"
                        android:layout_marginLeft="15dp"
                        android:layout_marginBottom="5dp"/>
                    <Spinner android:id="@+id/car_type"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        style="@style/mpwc" />
                </LinearLayout>
                <LinearLayout style="@style/mpwc"
                    android:orientation="vertical"
                    android:paddingLeft="20dp"
                    >
                <LinearLayout style="@style/mpwc"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="25dp">
                    <CheckBox
                        style="@style/chkbxs_addcar"
                        android:text="Seater"
                        android:id="@+id/seater"
                         />
                    <CheckBox
                        android:text="AUX"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/auxs"
                        />

        </LinearLayout>

                <LinearLayout style="@style/mpwc"
                    android:orientation="horizontal"
                    android:weightSum="2"
                    android:layout_marginTop="10dp">
                    <CheckBox
                        android:text="Music"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/musicch"
                        />
                    <CheckBox
                        android:text="Video"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/videoo"
                        />

                </LinearLayout>
                    <LinearLayout style="@style/mpwc"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">
                        <CheckBox
                            android:text="USB"
                            style="@style/chkbxs_addcar"
                            android:id="@+id/usbbs"
                            />
                    <CheckBox
                        android:text="Bluetooth"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/bluto"
                        />
                </LinearLayout>
                <LinearLayout style="@style/mpwc"
                                android:orientation="horizontal"
                                android:weightSum="2"
                                android:layout_marginTop="10dp">
                    <CheckBox
                        android:text="FWD"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/fwdd"
                         />
                    <CheckBox
                        android:text="RWD"
                        style="@style/chkbxs_addcar"
                        android:id="@+id/rwdd"
                         />

                    </LinearLayout>
                    <LinearLayout style="@style/mpwc"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">
                        <CheckBox
                            android:text="AC"
                            style="@style/chkbxs_addcar"
                            android:id="@+id/acsys"
                            />
                        <CheckBox
                            android:text="Power Steering"
                            style="@style/chkbxs_addcar"
                            android:id="@+id/powersteer"
                            />

                    </LinearLayout>
                    <LinearLayout style="@style/mpwc"
                        android:orientation="horizontal"
                        android:weightSum="2"
                        android:layout_marginTop="10dp">

                        <CheckBox
                            android:text="Power Window"
                            android:layout_weight="2"
                            style="@style/chkbxs_addcar"
                            android:id="@+id/powerWindow"
                            />

                    </LinearLayout>
                </LinearLayout>
                <TextView
                    style="@style/mpwc"
                    android:text="Car Images"
                    android:paddingTop="16dp"
                    android:paddingLeft="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="10dp"
                    android:textSize="16dp"
                    android:layout_marginBottom="10dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="#ffffff"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/ji"
                    android:orientation="vertical"
                    android:background="#eeeeee"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    >
                    <ImageView
                        android:layout_width="250dp"
                        android:layout_weight="1"
                        android:layout_height="150dp"
                        android:layout_marginLeft="2dp"
                        android:id="@+id/dc"/>
                </LinearLayout>
                <Button
                    android:id="@+id/hu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+ Add Images"
                    android:padding="10dp"
                    android:background="#ffb515"
                    android:textColor="#ffffff"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"

                    />

                <Switch
                    android:id="@+id/visible_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Show in List"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:switchPadding="30dp"
                    android:checked="true"
                    android:textOn="Shown in the list"
                    android:textOff="Hidden from the list"
                    />

                <Button
                    android:id="@+id/upload_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload"
                    android:layout_marginBottom="10dp"
                    android:background="#FF00ACC1"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:onClick="goToOTP"

                    />







            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</LinearLayout>
