<?xml version='1.0' encoding='utf-8' ?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_single_car_detail"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView style="@style/mama">
        <LinearLayout android:orientation="vertical" android:paddingBottom="10.0dip" style="@style/mpwc">
            <LinearLayout android:orientation="vertical" android:layout_marginTop="0.0dip" style="@style/topTitleBar">
                <TextView
                    android:id="@+id/car_brand_name"
                    android:textSize="20.0dip" android:textColor="@color/colorPrimary" android:text="Loading.." style="@style/topTitleText" />
                <Button style="@style/topTitleShadow" />
            </LinearLayout>

            <LinearLayout android:orientation="vertical" android:background="#ffffffff" style="@style/mpwc">
                <LinearLayout style="@style/singleCar_container">
                    <LinearLayout
                        android:orientation="vertical"
                        android:background="#ffffffff"
                        style="@style/mpwc">
                        <TextView

                            android:text="@string/carDesc"
                            style="@style/confirmBooking_QueText" />
                        <TextView
                            android:id="@+id/car_number"
                            android:text="Loading..." style="@style/confirmBooking_AnsText" />
                        <TextView

                            android:text="@string/costper"
                            style="@style/confirmBooking_QueText" />
                        <TextView
                            android:id="@+id/car_cost"
                            android:text="Loading.." style="@style/confirmBooking_AnsText" />
                        <TextView android:text="@string/carPho" style="@style/confirmBooking_QueText" />

                        <LinearLayout
                            android:orientation="vertical"
                            android:id="@+id/img_lin_cont"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"></LinearLayout>


                      </LinearLayout>
                    <Button
                        android:id="@+id/show_booksbtn"
                        android:text="@string/show_bookings"
                        android:textColor="#ffffff"
                        android:background="#00b9e8"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="25dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <Button
                        android:id="@+id/delt_btn"
                        android:text="@string/delcr"
                        android:textColor="#ffffff"
                        android:background="#a20000"
                        android:padding="10dp"
                        android:textSize="18dp"
                        android:layout_marginBottom="50dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </LinearLayout>
                 </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>