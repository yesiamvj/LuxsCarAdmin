<LinearLayout style="@style/singleCar_container"
    android:id="@+id/car_container"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:id="@+id/sigle_car"
        android:orientation="vertical"
        android:background="#ffffffff"
        android:onClick="goToSingleCarDetail" style="@style/mpwc">
        <TextView
            android:id="@+id/car_name"
            android:text="Audi VB Tuning"
            style="@style/browse_car_name"
            />
        <TextView
            android:id="@+id/car_cost"
            android:text="Rs.1000 / day"
            style="@style/browse_car_price"
            />
        <ImageView
            android:id="@+id/car_image"
            android:padding="50dp"
            style="@style/browse_car_image" />
    </LinearLayout>
    <Button
        android:id="@+id/selc_car"

        android:text="Select Car" android:onClick="goToConfirmBooking" style="@style/browse_car_selectBtn"

        />
</LinearLayout>